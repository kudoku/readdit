<p><%= current_user.email %></p>
<p><%= current_user.username %></p>
<p><%= current_user.bio %></p>
<% if current_user.avatar_file_size != nil %>
  <p><%= image_tag @user.avatar.url(:medium) %> <%= link_to 'Delete Avatar', delete_avatar_path(current_user) %></p>
  <p><%= image_tag current_user.avatar.url(:thumb) %></p>
<% end %>  
<div class="form-group">
  <%= form_for current_user, method: :patch do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :bio %>
  <%= f.text_area :bio %>
</div>
  <%= f.submit %>
<% end %>
<p>
  <% current_user.links.each do |link| %>
    <%= link.title %>
  <% end %>
</p>